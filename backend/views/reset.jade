doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Reset Password
        link(href="//cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/darkly/bootstrap.min.css", rel="stylesheet")
        script( src='//cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')

    body 
        form(method='POST')
            legend Reset Password
            .form-group 
                label(for='password') New Password
                input.form-control(type='password', name='password', value='', placeholder='New password', autofocus=true, required, minlength=6, maxlength=20)
            .form-group 
                label(for='password') Confirm Password
                input.form-control(type='password', name='confirmPassword', value='', placeholder='Confirm password', required, minlength=6, maxlength=20)
            .form-group
                button.btn.btn-primary(type='submit') Update Password